<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <appSettings>
    <add key ="PUPPET_ID1" value="10000"/>
    <add key="PUPPET_ID1_PORT" value="12000"/>
    <add key="PUPPET_ID2" value=""/>
    <add key="PUPPET_ID2_PORT" value=""/>
    <add key ="PUPPET_ID3" value="12001"/>
    <add key="PUPPET_ID3_PORT" value=""/>
    <add key="PUPPET_ID4" value=""/>
    <add key="PUPPET_ID5_PORT" value=""/>
    <add key ="PUPPET_ID5" value="12002"/>
    <add key="PUPPET_ID6" value=""/>
    <add key="PUPPET_ID6_PORT" value="12003"/>
  </appSettings>
  <log4net>
    <appender name="ApplicationRollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Logs_M\\logfile"/>
      <appendToFile value="true"/>
      <rollingStyle value="Composite"/>
      <datePattern value="yyyy_MM_dd.log"/>
      <maxSizeRollBackups value="100"/>
      <maximumFileSize value="1024KB"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d [%t] %-5p %m%n"/>
      </layout>
    </appender>
    <logger name="LogApplicationLogs">
      <level value="INFO"/>
      <appender-ref ref="ApplicationRollingFileAppender"/>
    </logger>
  </log4net>
</configuration>